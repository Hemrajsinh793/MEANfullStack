<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!--Css section-->
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" href="/Contents/app.css">
</head>
<body>
  
    <!--navbar code-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <a class="navbar-brand" href="/"><img src="/Assets/images/logo.png" alt="logo" srcset="" width="60" height="60"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <%if(title=="Home"){%>
              <li class="nav-item active">
                <%}else{%>
                  <li class="nav-item"></li>
                  <%}%>   
                <a class="nav-link" href="/"><i class="fa fa-2x fa-home"></i>Home <span class="sr-only">(current)</span></a>
              </li>  

              <%if(title=="About"){%>
                <li class="nav-item active">
                  <%}else{%>
                    <li class="nav-item"></li>
                  <%}%>          
              
                  <a class="nav-link" href="/about"><i class="fa fa-2x fa-info"></i>About</a>
                </li>

                <%if(title=="Products"){%>
                <li class="nav-item active">
                  <%}else{%>
                    <li class="nav-item"></li>
                  <%}%>
                  <a class="nav-link" href="/products"><i class="fa fa-2x fa-briefcase"></i>Products</a>
                </li>

                <%if(title=="Services"){%>
                <li class="nav-item active">
                  <%}else{%>
                    <li class="nav-item"></li>
                  <%}%>
                  <a class="nav-link" href="/services"><i class="fa fa-2x fa-bullseye"></i>Services</a>
                </li>

                <%if(title=="Contact"){%>
                <li class="nav-item active">
                  <%}else{%>
                    <li class="nav-item"></li>
                  <%}%>
                  <a class="nav-link" href="/contact"><i class="fa fa-2x fa-phone"></i>Contact</a>
                </li>

              <% if(typeof displayName== 'string' && displayName){ %>
                <li class="navbar-text"><i class="fa fa-2x fa-user"></i>
                Welcome, <%= displayName%></li>
                <li class="nav-item"><a href="/logout" class="nav-link">
                 <i class="fa fa-2x fa-sign-out"></i>Logout</a></li>

                <% } else {%>
                
                  <li class="nav-item"><a href="/login" class="nav-link">
                    <i class="fa fa-2x fa-sign-in"></i>Login</a></li>
                      
              <% } %>

            </ul>
          </div>
        </nav>
      </header>
  
